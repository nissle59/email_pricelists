        #     '–û—Å—Ç–∞—Ç–∫–∏': '#e6ffe6',  # –∑–µ–ª–µ–Ω—ã–π
        # }

        for email in emails:
            # –û–ø—Ä–µ–¥–µ–ª—è–µ–º, –∫–∞–∫–∞—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –ø–æ–¥—Ö–æ–¥–∏—Ç –¥–ª—è —ç—Ç–æ–≥–æ —Ñ–∞–π–ª–∞

        # –ù–∞–∑–≤–∞–Ω–∏–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
        ttk.Label(settings_frame, text="–ù–∞–∑–≤–∞–Ω–∏–µ:", width=12).grid(row=0, column=0, sticky=W, pady=2)
        name_var = ttk.StringVar(value=config_data['name'])
        name_entry = ttk.Entry(settings_frame, textvariable=name_var, width=20)
        name_entry.grid(row=0, column=1, sticky=W, pady=2, padx=5)

        # –®–∞–±–ª–æ–Ω –∏–º–µ–Ω–∏ —Ñ–∞–π–ª–∞
        ttk.Label(settings_frame, text="–®–∞–±–ª–æ–Ω —Ñ–∞–π–ª–∞:", width=12).grid(row=1, column=0, sticky=W, pady=2)
        pattern_var = ttk.StringVar(value=config_data['filename_pattern'])
        pattern_entry = ttk.Entry(settings_frame, textvariable=pattern_var, width=20)
        pattern_entry.grid(row=1, column=1, sticky=W, pady=2, padx=5)

        # –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è —à–∞–±–ª–æ–Ω–∞
        pattern_var.trace('w', lambda *args: self._on_pattern_change(pattern_var))

        # –ü–æ—Å—Ç–∞–≤—â–∏–∫
        ttk.Label(settings_frame, text="–ü–æ—Å—Ç–∞–≤—â–∏–∫:", width=12).grid(row=2, column=0, sticky=W, pady=2)
        vendor_var = ttk.StringVar(value=config_data['vendor'])
        vendor_entry = ttk.Entry(settings_frame, textvariable=vendor_var, width=20)
        vendor_entry.grid(row=2, column=1, sticky=W, pady=2, padx=5)

        # –ò–º—è –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏
        ttk.Label(settings_frame, text="–ö–æ–Ω—Ñ–∏–≥ –ø–∞—Ä—Å–µ—Ä–∞:", width=12).grid(row=3, column=0, sticky=W, pady=2)
        config_var = ttk.StringVar(value=config_data['config_name'])
        config_entry = ttk.Entry(settings_frame, textvariable=config_var, width=20)
        config_entry.grid(row=3, column=1, sticky=W, pady=2, padx=5)

        # –ö–Ω–æ–ø–∫–∏ –¥–µ–π—Å—Ç–≤–∏–π
        btn_frame = ttk.Frame(settings_frame)
        btn_frame.grid(row=4, column=0, columnspan=2, pady=5, sticky=W)

        ttk.Button(
            btn_frame,
            text="–ù–∞—Å—Ç—Ä–æ–∏—Ç—å –ø–∞—Ä—Å–µ—Ä",
            bootstyle=PRIMARY,
            command=lambda: self._configure_parser({
                'name': name_var.get(),
                'vendor': vendor_var.get(),
                'config_name': config_var.get()
            })
        ).pack(side=LEFT, padx=(0, 10))

        ttk.Button(
            btn_frame,
            text="–£–¥–∞–ª–∏—Ç—å",
            bootstyle=DANGER,
            command=lambda: self._delete_config(config_frame)
        ).pack(side=LEFT)

        # –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Å—ã–ª–∫–∏ –Ω–∞ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        config_frame.vars = {
            'name': name_var,
            'pattern': pattern_var,
            'vendor': vendor_var,
            'config_name': config_var
        }

        self.configurations.append(config_frame)

    def _delete_config(self, config_frame):
        """–£–¥–∞–ª—è–µ—Ç –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—é"""
        if config_frame in self.configurations:
            self.configurations.remove(config_frame)
        config_frame.destroy()
        # –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –ø–∏—Å–µ–º
        self._update_email_display()

    def _configure_parser(self, config_data):
        """–û—Ç–∫—Ä—ã–≤–∞–µ—Ç –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –ø–∞—Ä—Å–µ—Ä–∞ –¥–ª—è —ç—Ç–æ–π –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏"""
        try:
            from parser import PriceParserApp

            parser_window = ttk.Toplevel(self)
            parser_window.title(f"–ü–∞—Ä—Å–µ—Ä - {config_data['name']}")
            parser_window.geometry("1200x750")

            # –¶–µ–Ω—Ç—Ä–∏—Ä—É–µ–º –æ–∫–Ω–æ –ø–∞—Ä—Å–µ—Ä–∞
            parser_window.update_idletasks()
            x = (parser_window.winfo_screenwidth() - parser_window.winfo_width()) // 2
            y = (parser_window.winfo_screenheight() - parser_window.winfo_height()) // 2
            parser_window.geometry(f"+{x}+{y}")

            PriceParserApp(
                parent=parser_window,
                vendor=config_data['vendor'],
                file_in="",
                file_prefix="",
                config_name=config_data['config_name']
            )
        except Exception as e:
            ToastNotification(
                title="–û—à–∏–±–∫–∞",
                message=f"–û—à–∏–±–∫–∞ –æ—Ç–∫—Ä—ã—Ç–∏—è –ø–∞—Ä—Å–µ—Ä–∞: {e}",
                bootstyle=DANGER
            ).show_toast()

    def _save_all_configurations(self):
        """–°–æ—Ö—Ä–∞–Ω—è–µ—Ç –≤—Å–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–∏"""
        saved_configs = []

        for config_frame in self.configurations:
            if config_frame.winfo_exists():
                config_data = {
                    'name': config_frame.vars['name'].get(),
                    'filename_pattern': config_frame.vars['pattern'].get(),
                    'vendor': config_frame.vars['vendor'].get(),
                    'config_name': config_frame.vars['config_name'].get()
                }
                saved_configs.append(config_data)

        ToastNotification(
            title="–°–æ—Ö—Ä–∞–Ω–µ–Ω–æ",
            message=f"–°–æ—Ö—Ä–∞–Ω–µ–Ω–æ {len(saved_configs)} –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–π –ø–∞—Ä—Å–µ—Ä–∞",
            bootstyle=SUCCESS
        ).show_toast()